{
  "name": "paradise-chain-l1",
  "version": "1.0.0",
  "description": "Smart contracts for Paradise Tycoon L1 blockchain - Game economy, marketplace, crafting, and powerup systems",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "clean": "hardhat clean",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat run scripts/verify.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/empiresnotvampires/paradise-chain-l1.git"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "ethereum",
    "avalanche",
    "l1",
    "gamefi",
    "web3",
    "nft",
    "erc1155",
    "marketplace",
    "paradise-tycoon"
  ],
  "author": "Empires Not Vampires",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/empiresnotvampires/paradise-chain-l1/issues"
  },
  "homepage": "https://github.com/empiresnotvampires/paradise-chain-l1#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.0",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
