# Paradise Chain L1 - Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# DEPLOYMENT KEYS (Required for deployment)
# =============================================================================

# Private key for deployment (without 0x prefix)
# WARNING: Never share or commit this value
PRIVATE_KEY=your_private_key_here

# =============================================================================
# NETWORK RPC URLS
# =============================================================================

# Paradise L1 Testnet (Chain ID: 18133)
TESTNET_RPC_URL=https://rpc.paradise.cloud/ext/bc/YOUR_BLOCKCHAIN_ID/rpc

# Paradise L1 Mainnet (Chain ID: 15135)
MAINNET_RPC_URL=https://rpc.paradise.cloud/ext/bc/YOUR_BLOCKCHAIN_ID/rpc

# =============================================================================
# EXPLORER API (Optional - for contract verification)
# =============================================================================

# Blockscout explorer API key (if required)
EXPLORER_API_KEY=

# =============================================================================
# GAS REPORTING (Optional)
# =============================================================================

# Enable gas reporting in tests
REPORT_GAS=false

# CoinMarketCap API key for USD gas estimates
COINMARKETCAP_API_KEY=

# =============================================================================
# CONTRACT ADDRESSES (Populated after deployment)
# =============================================================================

# Core contracts
GAME_REGISTRY_ADDRESS=
PARADISE_ITEMS_ADDRESS=
TREASURY_ADDRESS=

# Economy contracts
AUCTION_HOUSE_ADDRESS=
VENDOR_SHOP_ADDRESS=

# Gameplay contracts
RESOURCE_COLLECTION_ADDRESS=
CRAFTING_STATION_ADDRESS=
QUEST_MANAGER_ADDRESS=
DAILY_REWARDS_ADDRESS=

# Powerup contracts
BUFF_REGISTRY_ADDRESS=
POWERUP_MANAGER_ADDRESS=
